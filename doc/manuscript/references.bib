@article{rossi_critical_2008,
  title = {Critical Temperatures for Xylogenesis in Conifers of Cold Climates},
  author = {Rossi, Sergio and Deslauriers, Annie and Gri{\c c}ar, Jozica and Seo, Jeong-Wook and Rathgeber, Cyrille BK and Anfodillo, Tommaso and Morin, Hubert and Levanic, Tom and Oven, Primoz and Jalkanen, Risto},
