  copyright = {\textcopyright{} 2018 John Wiley \& Sons Ltd},
  langid = {english},
  keywords = {climate change,drought,evapotranspiration,forest ecology,phenology,temperate forest,tree-ring},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/gcb.14096},
  file = {/Users/kteixeira/Zotero/storage/SHC9HQPK/D'Orangeville et al. - 2018 - Drought timing and local climate determine the sen.pdf;/Users/kteixeira/Zotero/storage/ZHMGPUIY/gcb.html}
