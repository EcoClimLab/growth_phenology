@article{potkay_turgorlimited_2022,
  title = {Turgor-Limited Predictions of Tree Growth, Height and Metabolic Scaling over Tree Lifespans},
  author = {Potkay, Aaron and H{\"o}ltt{\"a}, Teemu and Trugman, Anna T and Fan, Ying},
  year = {2022},
